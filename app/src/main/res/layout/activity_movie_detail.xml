<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/album_topinfo_container"
        android:background="@drawable/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="@dimen/margin_small"
            android:id="@+id/album_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_margin="@dimen/margin_small"
                android:lines="1"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/album_director"
                android:layout_margin="@dimen/margin_small"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/font_normal"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/album_main_actor"
                android:layout_margin="@dimen/margin_small"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/font_normal"
                android:lines="1"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/album_score"
                android:layout_margin="@dimen/margin_small"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/font_normal"
                android:lines="1"
                android:textSize="@dimen/abc_text_size_small_material" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/album_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:ellipsize="middle"
        android:maxLines="3" />

    <GridView
        android:id="@+id/frame_list_view_episode"
        android:layout_below="@+id/album_desc"
        android:visibility="gone"
        style="@style/widget_video_gridview"/>

    <Button
        android:text="@string/movie_play_immediately"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="35dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font_normal"
        android:background="@color/white"
        android:onClick="closeAlbumDesc"
        android:id="@+id/album_play_back"
        android:visibility="visible"
        />

</LinearLayout>

