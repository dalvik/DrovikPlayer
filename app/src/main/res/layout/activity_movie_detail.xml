<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/album_topinfo_container"
        android:background="@drawable/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_small"
        android:weightSum="7">

        <ImageView
            android:layout_margin="@dimen/margin_small"
            android:id="@+id/album_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_margin="@dimen/margin_small"
                android:lines="1"
                android:text="title"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/album_director"
                android:layout_margin="@dimen/margin_small"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="direct"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/album_main_actor"
                android:layout_margin="@dimen/margin_small"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="actor"
                android:textSize="@dimen/abc_text_size_small_material" />

            <TextView
                android:id="@+id/album_score"
                android:layout_margin="@dimen/margin_small"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="score"
                android:textSize="@dimen/abc_text_size_small_material" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/desc_layout"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp">
        <FrameLayout
            android:paddingTop="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_small"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        <ImageView
            android:layout_gravity="bottom"
            android:background="@color/grey_medium_light"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:visibility="visible"
            android:background="@color/calypso_blue_light"
            android:id="@+id/album_desc_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="2dp">
                <!-- Contents will go here..-->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/album_desc"
                        android:paddingTop="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="album_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </ScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>
    <GridView
        android:id="@+id/frame_list_view_episode"
        android:layout_below="@+id/desc_layout"
        android:visibility="gone"
        style="@style/widget_gridview"/>
    <Button
        android:text="xxxx"
        android:textColor="#FFF"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="35dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:textStyle="bold"
        android:onClick="closeAlbumDesc"
        android:id="@+id/album_play_back"
        android:visibility="visible"
        />

</LinearLayout>

