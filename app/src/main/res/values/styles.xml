<resources>

    <style name="FullscreenTheme" parent="Theme.App.NoActionBar">
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.App.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommoAppLaunch" parent="Theme.App.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorCommonPrimary</item>
        <item name="colorPrimaryDark">@color/colorCommonPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="CommoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorCommonPrimary</item>
        <item name="colorPrimaryDark">@color/colorCommonPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonAppTheme" parent="Theme.App.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Widget.App.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.App.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="actionButtonStyle">@style/Widget.App.ActionButton</item>
        -->
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>

        <item name="actionButtonStyle">@style/Widget.App.ActionButton</item>
    </style>


    <style name="settings_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:alpha">60</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="city_MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/common_12_dp</item>
        <item name="android:paddingRight">@dimen/common_12_dp</item>
    </style>

    <style name="city_LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/common_36_dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="core_CommonIconImageSmall">
        <item name="android:layout_width">@dimen/common_16_dp</item>
        <item name="android:layout_height">@dimen/common_16_dp</item>
    </style>

    <style name="core_CommonIconImage">
        <item name="android:layout_width">@dimen/common_24_dp</item>
        <item name="android:layout_height">@dimen/common_24_dp</item>
    </style>

    <style name="widget_video_gridview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:columnWidth">@dimen/image_thumbnail_size</item>
        <item name="android:numColumns">3</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:gravity">fill</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listSelector">@drawable/listview_item_selector</item>
    </style>
</resources>
