<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RadioGroup
        android:id="@+id/rg_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center">

        <RadioButton
            style="@style/weibo_tab"
            android:drawableLeft="@drawable/lib_drawable_viewpagerindicator_tab_main_selector"
            android:checked="true"
            android:text="微博" />

        <RadioButton
            style="@style/weibo_tab"
            android:drawableLeft="@drawable/lib_drawable_viewpagerindicator_tab_msg_selector"
            android:text="\@我" />

        <RadioButton
            style="@style/weibo_tab"
            android:drawableRight="@drawable/lib_drawable_viewpagerindicator_tab_find_selector"
            android:text="评论" />

        <RadioButton
            style="@style/weibo_tab"
            android:drawableLeft="@drawable/lib_drawable_viewpagerindicator_tab_center_selector"
            android:text="我的" />

    </RadioGroup>
    
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
</LinearLayout>
