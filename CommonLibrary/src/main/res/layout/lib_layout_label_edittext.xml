<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/lib_drawable_edittext_label"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lib_id_edittext_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:textColor="@color/black0"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/lib_id_edittext_body"
        style="?android:attr/textViewStyle"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:focusableInTouchMode="true"
        android:gravity="right|center_vertical"
        android:textColor="@color/black0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lib_id_edittext_footer"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black0"
        android:textSize="16sp"
        android:background="@drawable/lib_drawable_edittext_none" />

</LinearLayout>