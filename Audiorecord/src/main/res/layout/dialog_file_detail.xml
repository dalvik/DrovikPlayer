<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_add_title_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_hight"
        android:layout_marginTop="@dimen/common_20_dp"
        android:layout_marginBottom="@dimen/common_20_dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/file_input_detail_title"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/base_subtitle_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_20_dp"
        android:layout_marginLeft="@dimen/common_20_dp"
        android:layout_toLeftOf="@+id/activity_search_action_cancel"
        android:layout_marginBottom="@dimen/common_28_dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:background="@drawable/common_body_input_bg">

        <!-- name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size"
                android:text="@string/file_input_detail_name" />
            <TextView
                android:id="@+id/file_detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size" />
        </LinearLayout>

        <!-- time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size"
                android:text="@string/file_input_detail_time" />
            <TextView
                android:id="@+id/file_detail_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size" />
        </LinearLayout>

        <!-- size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size"
                android:text="@string/file_input_detail_size" />
            <TextView
                android:id="@+id/file_detail_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size" />
        </LinearLayout>

        <!-- path -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size"
                android:text="@string/file_input_detail_path" />
            <TextView
                android:id="@+id/file_detail_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size" />
        </LinearLayout>

        <!-- duration -->
        <LinearLayout
            android:id="@+id/detail_duration_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size"
                android:text="@string/file_input_detail_time" />
            <TextView
                android:id="@+id/file_detail_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:padding="@dimen/list_item_padding"
                android:textSize="@dimen/base_subtitle_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_8_dp"
        android:layout_marginBottom="@dimen/common_8_dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/dialog_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="@dimen/list_item_padding"
            android:textSize="@dimen/base_subtitle_size"
            android:text="@string/cancel" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/text_gray" />

        <TextView
            android:id="@+id/dialog_button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            android:padding="@dimen/list_item_padding"
            android:textSize="@dimen/base_subtitle_size"
            android:text="@string/confirm" />

    </LinearLayout>
</LinearLayout>