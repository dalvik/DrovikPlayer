<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bolder">

    <com.android.audiorecorder.ui.stickyheadergridview.MyImageView
        android:id="@+id/grid_item"
        android:scaleType="centerCrop"
        android:layout_width="fill_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/grid_item_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/grid_item"
        android:paddingLeft="@dimen/common_5_dp"
        android:gravity="center|left"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@color/black_harf"/>
</RelativeLayout>