<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" ><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="3dp" />

            <stroke android:width="1dp" android:color="@color/green0" />

            <solid android:color="@color/green1" />
        </shape></item>
    <item android:state_enabled="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="3dp" />

            <stroke android:width="1dp" android:color="@color/green0" />

            <solid android:color="@color/green4" />
        </shape></item>
    <item android:state_pressed="true" android:state_window_focused="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="3dp" />

            <stroke android:width="1dp" android:color="@color/green0" />

            <solid android:color="@color/green3" />
        </shape></item>

</selector>